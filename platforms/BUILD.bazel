load("@bzlparty_tools//lib:platforms.bzl", "PLATFORMS")

package(
    default_visibility = ["//visibility:public"],
)

exports_files(
    ["host.bzl"],
    visibility = ["//visibility:public"],
)

[
    platform(
        name = p,
        constraint_values = cv,
    )
    for (p, cv) in PLATFORMS.items()
]

config_setting(
    name = "netbsd",
    constraint_values = [
        "@platforms//os:netbsd",
    ],
    visibility = ["//visibility:public"],
)
